<% 
    conference_details = {
        "convenor" : {
            name : "Dr. Vivek Thapar",
            designation : "Associate Professor, Department of Computer Science & Engineering, GNDEC",
            phone : "9877709054"
        },
        "organising_secretary" : [
        {
            name : "Dr. Sita Rani",
            designation : "Assistant Professor, Department of Computer Science & Engineering, GNDEC",
            phone : "7508008004"
        }, 
        {
            name : "Dr. Priyanka Arora",
            designation : "Assistant Professor, Department of Computer Science & Engineering, GNDEC",
            phone : "9888899029"
        }
        ],
        "grievance_redressal" : "icctsd26@gmail.com"
    }
%>


<!-- contact_us.ejs -->
<section class="pt-12 bg-[#fafafa]">
  <div class="text-center">
    <h1 class="text-h1 font-bold text-secondary font-montserrat">Contact Us</h1>
    <div class="w-24 h-1 bg-gradient-to-r from-secondary to-secondary/40 mx-auto my-4 rounded-full"></div>
    <p class="text-body text-base-content/80 max-w-3xl mx-auto">
      Reach out to the organizing committee of ICCT-SD 2026 for queries, collaborations, or support.
    </p>
  </div>
</section>

<div class="divider"></div>

<section class="bg-base-100 py-16">
  <div class="container mx-auto px-4 max-w-6xl grid grid-cols-1 md:grid-cols-2 gap-12">

    <!-- Convenor -->
    <div class="bg-white p-6 rounded-lg md:col-span-2 shadow-md border border-secondary/30">
      <h2 class="text-h3 font-semibold  text-secondary font-montserrat mb-4">Convenor</h2>
      <p class="font-semibold text-base-content/90"><strong>Name:</strong> <%= conference_details.convenor.name %></p>
      <p class="text-base-content/80"><strong>Designation:</strong> <%= conference_details.convenor.designation %></p>
      <p class="text-base-content/80"><strong>Phone:</strong> <a href="tel:<%= conference_details.convenor.phone %>" class="link link-secondary"><%= conference_details.convenor.phone %></a></p>
    </div>

    <!-- Grievance Redressal -->


    <!-- Organising Secretaries -->
    <% conference_details.organising_secretary.forEach(function(secretary){ %>
    <div class="bg-white p-6 rounded-lg shadow-md border border-secondary/30">
      <h2 class="text-h3 font-semibold text-secondary font-montserrat mb-4">Organising Secretary</h2>
      <p class="font-semibold text-base-content/90"><strong>Name:</strong> <%= secretary.name %></p>
      <p class="text-base-content/80"><strong>Designation:</strong> <%= secretary.designation %></p>
      <p class="text-base-content/80"><strong>Phone:</strong> <a href="tel:<%= secretary.phone %>" class="link link-secondary"><%= secretary.phone %></a></p>
    </div>
    <% }) %>

  </div>
</section>

<div class="font-body text-h6 text-center mt-2 mb-10 font-montserrat">For any inquiries or grievances, kindly email us at <span class="link link-secondary">
    <a href="mailto:<%= conference_details.grievance_redressal %>">
      <%= conference_details.grievance_redressal %> </a> </span> </div>